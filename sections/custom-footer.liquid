  "settings": [],
  "blocks": [
    {
      "type": "logo",
      "name": "Footer Logo",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Maximize your business and investment profits with expert guidance and innovative solutions."
        }
      ]
    },
    {
      "type": "newsletter-form",
      "name": "Newsletter Form",
      "settings": [
        {
          "type": "text",
          "id": "form_title",
          "label": "Form Title",
          "default": "Subscribe Our Newsletter"
        }
      ]
    },
    {
      "type": "link_list",
      "name": "Link List",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "link_list",
          "label": "Link List"
        },
        {
          "type": "range",
          "id": "width",
          "label": "Width",
          "min": 10,
          "max": 50,
          "step": 1,
          "unit": "%",
          "default": 20
        }
      ]
    },
    {
      "type": "mobile_app",
      "name": "Mobile App",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
