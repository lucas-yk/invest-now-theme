<div class="testimonial__card flex flex-col align-center gap-30">
  <div class="testimonial__card__rating">
    {% render 'star-rating', rating: rating, star_size: 20 %}
  </div>
  <div class="testimonial__card__feedback">{{ feedback }}</div>
  <div class="flex gap-12">
    {% if avatar != blank %}
      {{
        avatar
        | image_url: width: '60'
        | image_tag:
          alt: block.settings.avatar.alt,
          class: 'testimonial__card__avatar',
          height: null,
          width: '50%',
          loading: 'lazy'
      }}
      <div class="flex flex-col">
        <span class="testimonial__card__username">{{ username }}</span>
        <span class="testimonial__card__position">{{ role }}</span>
      </div>
    {% endif %}
  </div>
</div>
